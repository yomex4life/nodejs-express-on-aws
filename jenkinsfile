pipeline {
  agent any
  tools {nodejs "Node-Build"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        sh 'git log --reverse -1'
        sh 'npm install'
      }
    }
    stage('test') {
      steps {
        sh 'git log --reverse -1'
        sh 'npm test'
      }
    }
    stage('generate report'){
      sh cat ${BUILD_ID}.rpt
      archiveArtifacts "${env.BUILD_ID}.rpt"
    }
  }
}
